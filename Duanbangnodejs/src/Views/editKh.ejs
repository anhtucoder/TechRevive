<body>
    <div class="container-fluid p-4 bg-dark text-white text-center">
        <h1>
            TechRevive
        </h1><br>
        <ul class="nav justify-content-center bg-light ">
            <li class="nav-item">
                <a class="nav-link  text-dark" aria-current="page" href="/introduct">Giới thiệu</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/">Nhập thiết bị</a>
            </li>
            <!-- <li class="nav-item">
                <a class="nav-link text-dark" href="/dstb">Danh sách</a>
            </li> -->
            <li class="nav-item">
                <a class="nav-link text-dark" href="/contact">Liên Hệ</a>
            </li>
        </ul>
    </div> <br> <br>
    <div class="container-sm  vh-100 form-body">
        <div class="row">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items">
                        <h2>Sửa đổi thông tin </h2>
                        <form class="requires-validation" method="POST" action="/putdstb">
                            <div class="col-md-12">
                                <input class="form-control" type="text" name="name" value=" <%=  user.name %>">
                            </div><br>
                            <div class="col-md-12">
                                <input class="form-control" type="text" name="sdt" value=" <%=  user.sdt %>">
                            </div><br>
                            <div class="col-md-12">
                                <input class="form-control" type="text" name="address" value=" <%=  user.address %>">
                            </div><br>
                            <input class="form-control" type="text" name="id" value=" <%=  user.id %>" hidden>
                            <div class="form-button mt-3">
                                <button type="submit" class="btn btn-primary">Đã Xong</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="bg-light text-center text-lg-start">
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
